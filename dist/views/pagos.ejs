<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/stylesheets/querys.css">
    
    <!-- Recaptcha -->
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>

    <script type="text/javascript">
      var onloadCallback = function() {
        grecaptcha.render('html_element', {
          'sitekey' : process.env.site_key
        });
      };
    </script>

        <!-- Etiquetas Open Graph -->
    <meta property="og:title" content="<%= og && og.title ? og.title : title %>">
    <meta property="og:description" content="<%= og && og.description ? og.description : '' %>">
    <meta property="og:url" content="<%= og && og.url ? og.url : '' %>">
    <meta property="og:image" content="<%= og && og.image ? og.image : '' %>">
    <meta property="og:type" content="website">
  </head>
  <body>
    <header>
        <nav>
            <img src="images/logo.jpg" alt="logo">
        </nav>
        <nav>
            <ul>  
                <li><a href="/">Inicio</a></li>
                <li><a href="#ventajas">Nosotros</a></li>
                <li><a href="#servicios">Servicios</a></li>
                <li><a href="#contacto">Contacto</a></li>
            </ul>
        </nav>
    </header>

    <nav class="mainNavForm"> 
        <form action="/payments" method="post" class="formulario mainForm">
                    <h2>Formulario de pago</h2>
                    <div>
                        <label class="formLabel">Datos del titular</label>
                        <input id="nombre" type="text" name="nombre" placeholder="Nombre del titular" required>
                        <label class="formLabel">Correo Electronico</label>
                        <input id="email" type="email" name="email" placeholder="Email" required>
                        <label class="formLabel">Numero de Telefono</label>
                        <input id="telefono" type="tel" name="telefono" placeholder="Telefono" required>
                        <label class="formLabel">Datos de la Tarjeta</label>
                        <input id="tarjeta" type="number" name="tarjeta" minlength="10000000000000" maxlength="9999999999999999" placeholder="Numero de tarjeta" required> 
                        <div class="inputs">
                            <input type="number" id="mes" name="mes" min="1" max="12" placeholder="Mes" required>
                            <input type="number" id="ano" name="ano" min="2025" max="2035" placeholder="Año" required>
                            <input id="cvv" type="number" name="cvv" minlength="3" max="999" placeholder="CVV" required>
                        </div>
                        <select name="servicio" id="servicio" class="select">
                            <option value="Alarmas para accidentes, desastres naturales y robos.">Alarmas para accidentes, desastres naturales y robos.</option>
                            <option value="Camaras de seguridad con sensor de movimiento.">Camaras de seguridad con sensor de movimiento.</option>
                            
                            <option value="Instalacion del servicio deseado y mantenimiento anual.">Instalacion del servicio deseado y mantenimiento anual.</option>
                            <option value="Instalación del equipo y software para vigilancia 24/7 desde tu telefono celular">Instalación del equipo y software para vigilancia 24/7 desde tu telefono celular</option>
                        
                        </select>
                        <label class="formLabel">Monto</label>
                        <input id="monto" type="number" name="monto" placeholder="Monto a pagar" required>
                        <label class="formLabel">Moneda</label>
                        <select name="moneda" id="moneda" class="select">
                            <option value="USD">USD</option>
                            <option value="VES">VES</option>
                        </select>
                        <div class="g-recaptcha" data-sitekey=<%= process.env.site_key %>></div>
                        
                        <br/>
                        <button type="submit" id="enviar">Enviar</button>
                    </div>
        </form>

            <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit"
                async defer>
            </script>
        
    </nav>
    <script>
        document.addEventListener('submit', function() {
                alert('¡Gracias por tu solicitud!');
            });
    </script>
    
  </body>
</html>