<!DOCTYPE html>
<html>
  <head>
    <title><%= t('title') %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/stylesheets/querys.css">
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=process.env,analyticsPass"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', process.env,analyticsPass);
    </script>
    <!--Recaptcha g-->
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>

    <script type="text/javascript">
      var onloadCallback = function() {
        grecaptcha.render('html_element', {
          'sitekey' : process.env.site_key
        });
      };
    </script>

    <!-- Etiquetas Meta -->
        <meta name="description" content="<%= meta.description %>">
    <meta name="keywords" content="<%= meta.keywords %>">
    <meta name="author" content="<%= meta.author %>">


        <!-- Favicon -->
        <link rel="icon" href="/images/favicon.ico" type="image/x-icon">

    <!-- Etiquetas Open Graph -->
        <meta property="og:title" content="<%= meta.og.title %>">
        <meta property="og:description" content="<%= meta.og.description %>">
        <meta property="og:url" content="<%= meta.og.url %>">
        <meta property="og:image" content="<%= meta.og.image %>">
        <meta property="og:type" content="<%= meta.og.type || 'website' %>">
        <meta property="og:site_name" content="<%= meta.og.site_name %>">
   
    
  </head>
  <body>  
    <header>
        <nav>
            <img src="images/logo.jpg" alt="logo">
        </nav>
        <nav>
            <ul>  
                <li><a href="#inicio"><%= t('home') %></a></li>
                <li><a href="#ventajas"><%= t('advantages') %></a></li>
                <li><a href="#servicios"><%= t('services') %></a></li>
                <li><a href="#contacto"><%= t('contacts') %></a></li>
                <li><a href="/login"><%= t('admin') %></a></li>
            </ul>
            <form method="get" action="" style="display:inline;">
                    <select name="lang" onchange="this.form.submit()">
                        <option value="es" <%= lang === 'es' ? 'selected' : '' %>><%= t('spanish') %></option>
                        <option value="en" <%= lang === 'en' ? 'selected' : '' %>><%= t('english') %></option>
                    </select>
            </form>
        </nav>
    </header>

    <nav class="inicio" id="inicio">
        <div class="text">
            <h1><%= t('welcome') %></h1>
            <p><%= t('slogan') %></p>
            <a href="#contacto"><button class="button"><%= t('contactUs') %></button></a>
        </div>
        <video muted autoplay loop >
            <source src="/images/securitycam.mp4">
    </nav>

    <main>
        <section class="servicios1" id="servicios">
            <h1><%= t('services') %></h1>  
            <div class="servicios2">
                <div class="card" >
                    <div>
                        <img src="images/alarma1.png" alt="Alarmas">
                        <p><%= t('services1') %></p>
                        <p>100$</p>
                        <a href="/payments"><button><%= t('requestServices') %></button></a>
                    </div>
                    
                </div>
                <div class="card" >
                    <div>
                        <img src="images/alarma2.jpg" alt="Alarmas">
                        <p><%= t('services2') %></p>   
                        <p>200$</p>    
                        <a href="/payments"><button><%= t('requestServices') %></button></a>                 
                    </div>
                </div>
                <div class="card" >
                    <div>
                        <img src="images/camara2.jpg" alt="Alarmas">
                        <p><%= t('services3') %></p>
                        <p>250$</p>
                        <a href="/payments"><button><%= t('requestServices') %></button></a>
                    </div>
                    
                </div>
                <div class="card" >
                    <div>
                        <img src="images/camara.jpg" alt="Alarmas">
                        <p><%= t('services4') %></p>
                        
                        <p>300$</p>
                        <a href="/payments"><button><%= t('requestServices') %></button></a>
                    </div>
                    
                </div>
            </div>
        </section>

        <section class="ventajas" id="ventajas">
            <video muted autoplay loop >
                <source src="images/hands.mp4">
            </video>
            <nav class="boxx">
                
                <div class="vent">
                    
                    <img src="images/cheque.png" alt="...">
                    <p><%= t('advantages1') %></p>
                    
                </div>
                <div class="vent">
                    <img src="images/24-horas.png" alt="...">
                    <p><%= t('advantages2') %></p>
                
                </div>
                <div class="vent">
                    <img src="images/precio.png" alt="...">
                    <p><%= t('advantages3') %></p>

                </div>
                                
            </nav>

            
        </section>

        <section class="testimonios" >
            <p><%= t('testimonials') %></p>
            <div class="testigos">
                
                <div class="blockquote">
                    <img src="images/Ana garcia.jpg" alt="...">
                    <p><%= t('testimonial1') %></p>
                    
                </div>
                <div class="blockquote">
                    <img src="images/Juan Perez.jpg" alt="...">
                    <p><%= t('testimonial2') %></p>
                    
                </div>
                <div class="blockquote">
                    <img src="images/Maria Lopez.jpg" alt="...">
                    <p><%= t('testimonial3') %></p>
                    
                </div>
            </div>
        </section>

        <section class="contacto" id="contacto">
            <h1><%= t('contacts') %></h1>

            <form action="/contacto" method="post" class="form">
                <section>
                    <h2><%= t('contactForm') %></h2>
                    <div >
                        <label for="nombre"> <%= t('name') %> </label>
                        <input id="nombre" type="text" name="nombre" required>
                        <label for="email"> Email </label>
                        <input id="email" type="email" name="email" required>
                        <label for="telefono"> <%= t('phone') %></label>
                        <input id="telefono" type="tel" name="telefono" required>
                        <label for="mensaje"> <%= t('message') %> </label>
                        <textarea id="mensaje" name="mensaje" rows="5" ></textarea>
                        <div class="g-recaptcha" data-sitekey= <%= process.env.site_key %>></div>
                        <br/>
                        <button type="submit"><%= t('submit') %> </button>
                    </div>
                </section>
                
            </form>
                

            <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit"
                async defer>
            </script>
            <nav>
                <a href="#"><div><img src="images/email.png" alt="..."> <h3>safe&home@gmail.com</h3></div></a>
                <a href="#"><div><img src="images/telefono.png" alt="..."><h3>+58 0424-3068194</h3> </div></a>
                <a href="#"><div><img src="images/ubicacion.png" alt="..."><h3>San Juan de los Morros, Guarico</h3></div></a>
                <a href="https://www.facebook.com"><div><img src="images/fb.png" alt="..."><h3>Safe&Home</h3></div></a>
                <a href="https://www.instagram.com"><div><img src="images/ig.png" alt="..."><h3>@Safe&Home_</h3></div></a>
                <a href="https://www.tiktok.com"><div><img src="images/tiktok.png" alt="...">@Safe&Home_</div></a>
            </nav>
            
        </section>
    </main>

    <footer>
        <img src="images/logo.jpg" alt="logo">
        <p>&copy; <%= t('footer') %></p>
    </footer>

    <script>
        document.addEventListener('submit', function() {
                alert('Â¡Gracias por Contactarnos!');
            });
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.querySelector('form[action="/contacto"]');
            if (form) {
                form.addEventListener('submit', function (e) {
                    // Obtiene el valor del token de reCAPTCHA
                    const recaptcha = document.querySelector('[name="g-recaptcha-response"]');
                    if (!recaptcha || recaptcha.value === "") {
                        e.preventDefault();
                        alert('Por favor, completa el reCAPTCHA antes de enviar el formulario.');
                    }
                });
            }
        });
    </script>
</body>
</html>
