<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/stylesheets/querys.css">
  </head>
  <body>
    <header>
        <nav>
            <img src="/images/logo.jpg" alt="logo">
            <ul>  
                <li><a href="/">Inicio</a></li>
                <li><a href="#ventajas">Nosotros</a></li>
                <li><a href="#servicios">Servicios</a></li>
                <li><a href="#contacto">Contacto</a></li>
            </ul>
        </nav>
    </header>
    <nav class="mainNav">
      <h2>Usuarios Registrados</h2>

    <% if (contactos && contactos.length > 0) { %>
        <table>
            <thead>
                <tr class="tableHeader">
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Celular</th>
                    <th>Mensaje</th>
                </tr>
            </thead>
            <tbody>
                <% contactos.forEach(function(contacto) { %>
                    <tr>
                        <td class="tableTd"><%= contacto.id %></td>
                        <td class="tableTd"><%= contacto.nombre %></td>
                        <td class="tableTd"><%= contacto.email %></td>
                        <td class="tableTd"><%= contacto.telefono %></td>
                        <td class="tableTd"><%= contacto.mensaje %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No hay usuarios registrados en la base de datos.</p>
    <% } %>
    </nav>
    <footer>
        <img src="/images/logo.jpg" alt="logo">
        <p>&copy; 2025 Safe&Home. Todos los derechos reservados.</p>
    </footer>
   </body>
</html>